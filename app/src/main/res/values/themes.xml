<resources>
    <!-- Base application theme. -->
    <style name="Theme.TopRepository" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorSecondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorPrimary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.TopRepository.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Style for action bar overlay -->
    <style name="Theme.TopRepository.ActionBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <!-- Customize color of toolbar title -->
        <item name="android:textColorPrimary">@color/colorSecondary</item>
        <!-- Customize color of navigation drawer and popup icons -->
        <item name="colorControlNormal">@color/colorSecondary</item>
    </style>

</resources>